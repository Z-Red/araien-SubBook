<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="78dp">

        <TextView
            android:id="@+id/subName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/subscription"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cardView"
            android:layout_below="@+id/cardView"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="@string/date" />

        <TextView
            android:id="@+id/subDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="52dp"
            android:layout_marginTop="30dp"
            android:text="@string/_2018_01_17"
            android:textAlignment="textStart"
            android:visibility="visible" />

        <TextView
            android:id="@+id/subCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cardView"
            android:layout_below="@+id/cardView"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:text="@string/monthly_charge" />

        <TextView
            android:id="@+id/subChargeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="120dp"
            android:layout_marginTop="50dp"
            android:text="@string/_00_00"
            android:textAlignment="textStart"
            android:visibility="visible" />

        <TextView
            android:id="@+id/subComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cardView"
            android:layout_below="@+id/cardView"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:text="@string/comment" />

        <TextView
            android:id="@+id/subCommentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="83dp"
            android:layout_marginTop="70dp"
            android:text="@string/cccccccccccccccccccccccccccccc"
            android:textAlignment="textStart"
            android:visibility="visible" />

    </android.support.v7.widget.CardView>

</RelativeLayout>